#include <bits/stdc++.h>
#define endl '\n'
#define opt() ios_base::sync_with_stdio(0); cout.tie(0); cin.tie(0);
using namespace std;
int main()
{
    opt();
    int t; cin >> t;
    while(t--)
    {
        long long int n; cin >> n;
        if(n%2==0)
            cout << (n/2)-1 << endl;
        else{
            n = n - (n%2);
            cout << n/2 << endl;
        }
    }
    return 0;
}
