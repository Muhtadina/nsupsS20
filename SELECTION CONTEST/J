#include <bits/stdc++.h>
#define endl '\n'
#define opt() ios_base::sync_with_stdio(0); cout.tie(0); cin.tie(0);
using namespace std;
int main()
{
    opt();
    int T; cin >> T;
    long long int N[T];
    for(int i=0; i<T; i++){
        cin >> N[i];
    }
    for(int i=0; i<T; i++){
        N[i] = (N[i]*N[i])/2;
        cout << N[i] << endl;
    }
    return 0;
}
